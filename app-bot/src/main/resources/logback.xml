<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %replace(%msg){'(BOT_TOKEN|WEBHOOK_SECRET_TOKEN|DATABASE_PASSWORD|DATABASE_USER)=([^\s]+)', '$1=****'}%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
